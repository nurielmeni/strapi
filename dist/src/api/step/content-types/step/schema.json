{
    "kind": "collectionType",
    "collectionName": "steps",
    "info": {
        "singularName": "step",
        "pluralName": "steps",
        "displayName": "Step",
        "name": "step"
    },
    "options": {
        "increments": true,
        "timestamps": true,
        "draftAndPublish": true,
        "privateAttributes": [
            "published_at",
            "created_at",
            "updated_at"
        ]
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "step_name": {
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "type": "string",
            "required": true
        },
        "step_type": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "dynamiczone",
            "repeatable": false,
            "components": [
                "step.vocabulary",
                "step.pairs",
                "step.single-choice",
                "step.multi-choice",
                "step.fill-in-the-blank",
                "step.cross-match",
                "step.html",
                "step.filter"
            ],
            "required": true,
            "min": 1,
            "max": 1
        },
        "area": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::area.area"
        },
        "level": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "api::level.level"
        },
        "tags": {
            "type": "relation",
            "relation": "oneToMany",
            "target": "api::tag.tag"
        },
        "instructions": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "richtext",
            "required": false
        },
        "step_category": {
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "type": "enumeration",
            "enum": [
                "Theory",
                "Practice",
                "Test",
                "Exam",
                "Assessment"
            ],
            "required": true
        },
        "function": {
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "type": "enumeration",
            "enum": [
                "HTML",
                "Vocabulary",
                "Pairs",
                "Single_Choice",
                "MultiChoice",
                "Fill_in_the_Blank",
                "Cross_Match",
                "Filter_on_Voc",
                "Filter_on_Pairs",
                "Filter_on_SC",
                "Filter_on_MC",
                "Filter_on_FITB",
                "Filter_on_CM",
                "Filter_on_Filter_Voc",
                "Filter_on_Filter_Pairs",
                "Filter_on_Filter_SC",
                "Filter_on_Filter_MC",
                "Filter_on_Filter_FITB",
                "Filter_on_Filter_CM"
            ],
            "required": true
        }
    }
}
