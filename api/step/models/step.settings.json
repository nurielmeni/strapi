    "step_name": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "string",
      "required": true
    },
    "step_type": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "dynamiczone",
      "repeatable": false,
      "components": [
        "step.vocabulary",
        "step.pairs",
        "step.single-choice",
        "step.multi-choice",
        "step.fill-in-the-blank",
        "step.cross-match",
        "step.html",
        "step.filter"
      ],
      "required": true,
      "min": 1,
      "max": 1
    },
    "area": {
      "model": "area"
    },
    "level": {
      "model": "level"
    },
    "tags": {
      "collection": "tag"
    },
    "type": {
      "model": "type"
    },
    "instructions": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "richtext",
      "required": false
    },
    "step_category": {
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      },
      "type": "enumeration",
      "enum": [
        "Theory",
        "Practice",
        "Test",
        "Exam",
        "Assessment"
