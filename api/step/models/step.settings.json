    "function": {
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      },
      "type": "enumeration",
      "enum": [
        "Vocabulary",
        "Pairs",
        "Single_Choice",
        "MultiChoice",
        "Fill_in_the_Blank",
        "Cross_Match",
        "Filter_on_Voc",
        "Filter_on_Pairs",
        "Filter_on_SC",
        "Filter_on_MC",
        "Filter_on_FITB",
        "Filter_on_CM",
        "Filter_on_Filter_Voc",
        "Filter_on_Filter_Pairs",
        "Filter_on_Filter_SC",
        "Filter_on_Filter_MC",
        "Filter_on_Filter_FITB",
        "Filter_on_Filter_CM"
      ]
