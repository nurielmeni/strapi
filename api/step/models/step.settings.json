  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true,
    "privateAttributes": [
      "published_at",
      "created_at",
      "updated_at"
    ]
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
